@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo ao FastRest</h1>

    <div class="mt-4">
        <form asp-controller="Home" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ConsumptionMethod" value="DINE_IN" />
            <button type="submit" class="btn btn-success btn-lg m-2">Para comer aqui</button>
        </form>

        <form asp-controller="Home" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ConsumptionMethod" value="TAKEWAY" />
            <button type="submit" class="btn btn-warning btn-lg m-2">Para levar</button>
        </form>
    </div>
